<Window x:Class="ElectronicJournal.Views.DisciplineWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicJournal.Views"
        mc:Ignorable="d"
        Title="DisciplineWin" Height="240" Width="215">
    <Grid>
        <Label Background="#1E90FF" Content="Список доступных дисциплин"/>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="0,24,0,0" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дисциплина" Binding="{Binding Path=Discipline.nameDiscipline}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
